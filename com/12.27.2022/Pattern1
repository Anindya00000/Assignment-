package com;

public class Pattern1 
{
    public static void main(String[] args)
	{
          for(int k=0;k<5;k++)
          {
               for(int i=0;i<k;i++)
 	       {
 		     System.out.print("  ");
 	       }
       
               for(int i=1;i<=5-k;i++)
	       {
		     System.out.print("* ");
	       }
	       System.out.println();
          }
	}
}
