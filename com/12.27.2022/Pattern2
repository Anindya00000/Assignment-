package com;

public class Pattern2 
{
	public static void main(String[] args)
	{
        for(int k=1;k<=5;k++)
        {
           for(int i=0;i<5-k;i++)
 	         {
 		          System.out.print("  ");
 	         }
        	
           for(int i=k;i<=2*k-1;i++)
	         {
		          System.out.print("* ");
	         }
	         System.out.println();
        }
	}
}
